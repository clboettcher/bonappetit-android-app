<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/staffMembersListViewSwitcher"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

    <!--The list view that contains the loaded staff members-->
    <LinearLayout
            android:id="@+id/staffMembersListValueView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/staffMembersListView"
                />
    </LinearLayout>
    <!--TODO: drop relative layout and set id directly on include tag-->
    <!--The progress bar that is displayed while data is loading-->
    <RelativeLayout
            android:id="@+id/staffMembersListProgressView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

        <include layout="@layout/general_progress_view"/>
    </RelativeLayout>

    <!--State: Update failed-->
    <include android:id="@+id/staffMembersListFailedView"
            layout="@layout/fragment_menu_update_failed"/>

</ViewFlipper>