<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--***********************************************************************************************************-->
    <!-- TextView -->
    <!--***********************************************************************************************************-->

    <style name="TextView" parent="android:Widget.Holo.Light.TextView">
    </style>

    <style name="TextView.Heading">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Heading.H1">
        <item name="android:textSize">@dimen/font_l</item>
    </style>

    <style name="TextView.Heading.H2">
        <item name="android:textSize">@dimen/font_m</item>
    </style>

    <style name="TextView.Heading.H3">
        <item name="android:textSize">@dimen/font_s</item>
    </style>

    <style name="TextView.SizeMedium">
        <item name="android:textSize">@dimen/font_m</item>
    </style>

    <style name="TextView.SizeSmall">
        <item name="android:textSize">@dimen/font_s</item>
    </style>

    <style name="TextView.ErrorCode">
        <item name="android:textSize">@dimen/font_s</item>
        <item name="android:color">@color/light_grey</item>
    </style>

    <!--***********************************************************************************************************-->
    <!-- Button -->
    <!--***********************************************************************************************************-->
    <!--Defines general styles of a standard button-->
    <style name="Button" parent="android:Widget.Holo.Light.Button">
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingLeft">@dimen/button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/button_padding_left_right</item>
        <item name="android:paddingTop">@dimen/button_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/button_padding_top_bottom</item>
    </style>

    <style name="Button.Affirmative">
        <item name="android:background">@drawable/general_button_affirmative</item>
    </style>

    <style name="Button.Confirm">
        <item name="android:background">@drawable/general_button_affirmative</item>
        <item name="android:drawableLeft">@drawable/ic_navigation_accept</item>
    </style>

    <style name="Button.Discard">
        <item name="android:background">@drawable/general_button_dismissive</item>
        <item name="android:drawableLeft">@drawable/ic_content_discard</item>
    </style>

    <style name="Button.Decrement">
        <item name="android:background">@drawable/general_button_affirmative</item>
        <item name="android:drawableLeft">@drawable/ic_content_decrement</item>
    </style>

    <style name="Button.Increment">
        <item name="android:background">@drawable/general_button_affirmative</item>
        <item name="android:drawableLeft">@drawable/ic_content_increment</item>
    </style>

    <style name="Button.Send">
        <item name="android:background">@drawable/general_button_affirmative</item>
        <item name="android:drawableLeft">@drawable/ic_social_send_now</item>
    </style>

    <style name="Button.Edit">
        <item name="android:background">@drawable/general_button_affirmative</item>
        <item name="android:drawableLeft">@drawable/ic_content_edit</item>
    </style>

    <style name="Button.Delete">
        <item name="android:background">@drawable/general_button_dismissive</item>
        <item name="android:drawableLeft">@drawable/ic_content_delete</item>
    </style>

    <!--***********************************************************************************************************-->
    <!-- Horizontal Spacer -->
    <!--***********************************************************************************************************-->
    <style name="HorizontalSpacer">
        <item name="android:background">@color/grey</item>
    </style>

</resources>

